<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/todo"
        android:src="@mipmap/ic_launcher"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/id"
        android:layout_width="50sp"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textSize="20sp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/longitude_label"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Longitude:"
        android:textSize="15sp"
        android:labelFor="@+id/longitude"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/longitude"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/longitude_label"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/latitude_label"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/longitude_label"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5sp"
        android:layout_toRightOf="@+id/image"
        android:labelFor="@+id/latitude"
        android:text="Latitude:"
        android:textColor="@color/black"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/latitude"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:text="1234"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/latitude_label"
        android:layout_below="@+id/longitude"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitude_label"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="15dp"
        android:labelFor="@+id/date"
        android:text="Date:"
        android:textSize="15sp"
        android:layout_toRightOf="@+id/image"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitude"
        android:layout_marginTop="5sp"
        android:layout_toEndOf="@+id/date_label"
        android:text="2014-01-09"
        android:textSize="15sp"
        android:textColor="@color/black"
        />

</RelativeLayout>